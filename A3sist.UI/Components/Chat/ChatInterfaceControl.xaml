<UserControl x:Class="A3sist.UI.Components.Chat.ChatInterfaceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vs="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             xmlns:vsui="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.UI.Wpf"
             xmlns:local="clr-namespace:A3sist.UI.Components.Chat"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="400"
             Background="{DynamicResource VsBrush.Window}">

    <UserControl.Resources>
        <!-- Styles for chat interface -->
        <Style x:Key="ChatMessageStyle" TargetType="Border">
            <Setter Property="Margin" Value="5,2"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="MaxWidth" Value="320"/>
        </Style>

        <Style x:Key="UserMessageStyle" TargetType="Border" BasedOn="{StaticResource ChatMessageStyle}">
            <Setter Property="Background" Value="{DynamicResource VsBrush.AccentLight}"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>

        <Style x:Key="AssistantMessageStyle" TargetType="Border" BasedOn="{StaticResource ChatMessageStyle}">
            <Setter Property="Background" Value="{DynamicResource VsBrush.ToolWindowBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource VsBrush.ToolWindowBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <Style x:Key="SystemMessageStyle" TargetType="Border" BasedOn="{StaticResource ChatMessageStyle}">
            <Setter Property="Background" Value="{DynamicResource VsBrush.InfoBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource VsBrush.InfoBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ChatInputStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource VsBrush.SearchBoxBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource VsBrush.WindowText}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource VsBrush.ActiveBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="MaxHeight" Value="120"/>
        </Style>

        <DataTemplate x:Key="UserMessageTemplate">
            <Border Style="{StaticResource UserMessageStyle}">
                <StackPanel>
                    <TextBlock Text="{Binding Content}" 
                               Foreground="{DynamicResource VsBrush.WindowText}"
                               TextWrapping="Wrap"
                               FontSize="13"/>
                    <TextBlock Text="{Binding Timestamp, StringFormat='HH:mm'}" 
                               Foreground="{DynamicResource VsBrush.GrayText}"
                               FontSize="10"
                               HorizontalAlignment="Right"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="AssistantMessageTemplate">
            <Border Style="{StaticResource AssistantMessageStyle}">
                <StackPanel>
                    <DockPanel Margin="0,0,0,4">
                        <Ellipse Width="16" Height="16" 
                                 Fill="{DynamicResource VsBrush.Accent}" 
                                 DockPanel.Dock="Left"
                                 Margin="0,0,8,0"/>
                        <TextBlock Text="A3sist" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource VsBrush.WindowText}"
                                   FontSize="12"/>
                        <TextBlock Text="{Binding Timestamp, StringFormat='HH:mm'}" 
                                   Foreground="{DynamicResource VsBrush.GrayText}"
                                   FontSize="10"
                                   HorizontalAlignment="Right"/>
                    </DockPanel>
                    
                    <local:MarkdownTextBlock Text="{Binding Content}"
                                           Foreground="{DynamicResource VsBrush.WindowText}"
                                           FontSize="13"
                                           Margin="24,0,0,0"/>
                    
                    <!-- Action buttons for code suggestions -->
                    <StackPanel Orientation="Horizontal" 
                               Margin="24,8,0,0"
                               Visibility="{Binding HasCodeSuggestion, Converter={x:Static local:BooleanToVisibilityConverter.Instance}}">
                        <Button Content="ðŸ“‹ Copy" 
                               Style="{StaticResource VsButtonStyle}"
                               Command="{Binding CopyCodeCommand}"
                               Margin="0,0,8,0"/>
                        <Button Content="âœï¸ Apply" 
                               Style="{StaticResource VsButtonStyle}"
                               Command="{Binding ApplyCodeCommand}"
                               Margin="0,0,8,0"/>
                        <Button Content="ðŸ” Explain" 
                               Style="{StaticResource VsButtonStyle}"
                               Command="{Binding ExplainCodeCommand}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="SystemMessageTemplate">
            <Border Style="{StaticResource SystemMessageStyle}">
                <TextBlock Text="{Binding Content}" 
                           Foreground="{DynamicResource VsBrush.InfoText}"
                           TextWrapping="Wrap"
                           FontSize="12"
                           FontStyle="Italic"
                           TextAlignment="Center"/>
            </Border>
        </DataTemplate>

        <local:ChatMessageTemplateSelector x:Key="MessageTemplateSelector"
                                          UserTemplate="{StaticResource UserMessageTemplate}"
                                          AssistantTemplate="{StaticResource AssistantMessageTemplate}"
                                          SystemTemplate="{StaticResource SystemMessageTemplate}"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="250" x:Name="SuggestionsColumn"/>
        </Grid.ColumnDefinitions>

        <!-- Header with context indicators -->
        <Border Grid.Row="0" Grid.ColumnSpan="3"
                Background="{DynamicResource VsBrush.CommandBarGradientBegin}"
                BorderBrush="{DynamicResource VsBrush.CommandBarBorder}"
                BorderThickness="0,0,0,1"
                Padding="12,8">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <Ellipse Width="12" Height="12" 
                             Fill="{Binding ConnectionStatus, Converter={x:Static local:StatusToColorConverter.Instance}}"
                             Margin="0,0,8,0"/>
                    <TextBlock Text="A3sist Assistant" 
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource VsBrush.CommandBarText}"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" 
                           DockPanel.Dock="Right"
                           HorizontalAlignment="Right">
                    <Button Content="âš™ï¸" 
                           Style="{StaticResource VsButtonStyle}"
                           Command="{Binding OpenSettingsCommand}"
                           ToolTip="Settings"
                           Width="24" Height="24"
                           Margin="4,0"/>
                    <Button Content="ðŸ—‘ï¸" 
                           Style="{StaticResource VsButtonStyle}"
                           Command="{Binding ClearChatCommand}"
                           ToolTip="Clear Chat"
                           Width="24" Height="24"
                           Margin="4,0"/>
                    <Button Content="ðŸ“" 
                           Style="{StaticResource VsButtonStyle}"
                           Command="{Binding NewChatCommand}"
                           ToolTip="New Chat"
                           Width="24" Height="24"
                           Margin="4,0"/>
                </StackPanel>

                <!-- Context indicators -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           Visibility="{Binding HasActiveContext, Converter={x:Static local:BooleanToVisibilityConverter.Instance}}">
                    <TextBlock Text="ðŸ“„" 
                              Foreground="{DynamicResource VsBrush.CommandBarText}"
                              Margin="0,0,4,0"
                              Visibility="{Binding HasFileContext, Converter={x:Static local:BooleanToVisibilityConverter.Instance}}"/>
                    <TextBlock Text="ðŸ”" 
                              Foreground="{DynamicResource VsBrush.CommandBarText}"
                              Margin="0,0,4,0"
                              Visibility="{Binding HasSelectionContext, Converter={x:Static local:BooleanToVisibilityConverter.Instance}}"/>
                    <TextBlock Text="ðŸ—ï¸" 
                              Foreground="{DynamicResource VsBrush.CommandBarText}"
                              Margin="0,0,4,0"
                              Visibility="{Binding HasProjectContext, Converter={x:Static local:BooleanToVisibilityConverter.Instance}}"/>
                </StackPanel>
                        
                <!-- Suggestions toggle -->
                <Button Content="ðŸ’¡" 
                       Style="{StaticResource VsButtonStyle}"
                       Command="{Binding ToggleSuggestionsCommand}"
                       ToolTip="Toggle Smart Suggestions"
                       Width="24" Height="24"
                       DockPanel.Dock="Right"
                       Margin="4,0"/>
            </DockPanel>
        </Border>

        <!-- Smart Suggestions Panel -->
        <local:SmartSuggestionsPanel Grid.Row="1" Grid.Column="2"
                                   x:Name="SmartSuggestionsPanel"
                                   Margin="8"
                                   Visibility="{Binding ShowSuggestions, Converter={x:Static local:BooleanToVisibilityConverter.Instance}}"/>
        
        <!-- Splitter -->
        <GridSplitter Grid.Row="1" Grid.RowSpan="4" Grid.Column="1"
                     Width="3"
                     Background="{DynamicResource VsBrush.ToolWindowBorder}"
                     VerticalAlignment="Stretch"
                     HorizontalAlignment="Center"
                     Visibility="{Binding ShowSuggestions, Converter={x:Static local:BooleanToVisibilityConverter.Instance}}"/>

        <!-- Chat messages area -->
        <ScrollViewer Grid.Row="2" Grid.Column="0"
                      x:Name="ChatScrollViewer"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Background="{DynamicResource VsBrush.Window}"
                      Padding="8">
            <ItemsControl ItemsSource="{Binding Messages}"
                          ItemTemplateSelector="{StaticResource MessageTemplateSelector}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>

        <!-- Typing indicator -->
        <Border Grid.Row="3" Grid.Column="0"
                Background="{DynamicResource VsBrush.ToolWindowBackground}"
                Padding="16,8"
                Visibility="{Binding IsTyping, Converter={x:Static local:BooleanToVisibilityConverter.Instance}}">
            <StackPanel Orientation="Horizontal">
                <Ellipse Width="16" Height="16" 
                         Fill="{DynamicResource VsBrush.Accent}" 
                         Margin="0,0,8,0"/>
                <TextBlock Text="A3sist is thinking..." 
                           Foreground="{DynamicResource VsBrush.GrayText}"
                           FontStyle="Italic"/>
                <local:TypingDotsAnimation Margin="8,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Input area -->
        <Border Grid.Row="4" Grid.Column="0"
                Background="{DynamicResource VsBrush.CommandBarGradientBegin}"
                BorderBrush="{DynamicResource VsBrush.CommandBarBorder}"
                BorderThickness="0,1,0,0"
                Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="MessageTextBox"
                         Grid.Column="0"
                         Style="{StaticResource ChatInputStyle}"
                         Text="{Binding CurrentMessage, UpdateSourceTrigger=PropertyChanged}"
                         AcceptsReturn="True"
                         IsEnabled="{Binding IsInputEnabled}"
                         KeyDown="MessageTextBox_KeyDown">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" 
                                   Modifiers="Ctrl" 
                                   Command="{Binding SendMessageCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>

                <StackPanel Grid.Column="1" 
                           Orientation="Vertical"
                           Margin="8,0,0,0">
                    <Button Content="ðŸ“¤" 
                           Style="{StaticResource VsButtonStyle}"
                           Command="{Binding SendMessageCommand}"
                           IsDefault="True"
                           Width="36" Height="36"
                           ToolTip="Send (Ctrl+Enter)"
                           Margin="0,0,0,4"/>
                    
                    <Button Content="ðŸ“Ž" 
                           Style="{StaticResource VsButtonStyle}"
                           Command="{Binding AttachContextCommand}"
                           Width="36" Height="36"
                           ToolTip="Attach Context">
                        <Button.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="ðŸ“„ Current File" 
                                         Command="{Binding AttachCurrentFileCommand}"/>
                                <MenuItem Header="ðŸ” Selection" 
                                         Command="{Binding AttachSelectionCommand}"/>
                                <MenuItem Header="ðŸ—ï¸ Project" 
                                         Command="{Binding AttachProjectCommand}"/>
                                <MenuItem Header="ðŸ“Š Error List" 
                                         Command="{Binding AttachErrorsCommand}"/>
                                <Separator/>
                                <MenuItem Header="ðŸ—‘ï¸ Clear Context" 
                                         Command="{Binding ClearContextCommand}"/>
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>