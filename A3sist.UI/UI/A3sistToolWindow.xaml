<UserControl x:Class="A3sist.UI.UI.A3sistToolWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="400"
             Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2D2D30" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="A3sist Assistant" 
                          Foreground="White" FontWeight="Bold" FontSize="14"
                          VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Ellipse Width="8" Height="8" x:Name="ConnectionIndicator" 
                            Fill="Red" Margin="0,0,5,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="ConnectionStatus" Text="Disconnected" 
                              Foreground="White" FontSize="10" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <TabControl Grid.Row="1" Background="White">
            <!-- Chat Tab -->
            <TabItem Header="Chat">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Chat Messages -->
                    <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="ChatMessages" Background="White">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="5" Padding="8" CornerRadius="5">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Role}" Value="User">
                                                        <Setter Property="Background" Value="#FFE3F2FD"/>
                                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Role}" Value="Assistant">
                                                        <Setter Property="Background" Value="#FFF3E5F5"/>
                                                        <Setter Property="HorizontalAlignment" Value="Left"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Content}" TextWrapping="Wrap" FontSize="12"/>
                                            <TextBlock Text="{Binding Timestamp, StringFormat='HH:mm:ss'}" 
                                                      FontSize="10" Foreground="Gray" HorizontalAlignment="Right"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- Model Selection -->
                    <Border Grid.Row="1" Background="#FFF5F5F5" Padding="5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Model:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <ComboBox x:Name="ModelComboBox" Width="150" DisplayMemberPath="Name" 
                                     SelectedValuePath="Id" SelectionChanged="ModelComboBox_SelectionChanged"/>
                            <Button x:Name="RefreshModelsButton" Content="ðŸ”„" Width="25" Height="25" 
                                   Margin="5,0,0,0" Click="RefreshModelsButton_Click" ToolTip="Refresh Models"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Input Area -->
                    <Grid Grid.Row="2" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox x:Name="ChatInput" Grid.Column="0" Margin="0,0,5,0" 
                                AcceptsReturn="True" MaxHeight="100" VerticalScrollBarVisibility="Auto"
                                KeyDown="ChatInput_KeyDown" TextWrapping="Wrap"/>
                        <Button x:Name="SendButton" Grid.Column="1" Content="Send" 
                               Click="SendButton_Click" IsEnabled="False"/>
                    </Grid>
                </Grid>
            </TabItem>
            
            <!-- Agent Tab -->
            <TabItem Header="Agent">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Agent Controls -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button x:Name="StartAgentButton" Content="Start Analysis" 
                               Click="StartAgentButton_Click" Margin="0,0,5,0"/>
                        <Button x:Name="StopAgentButton" Content="Stop Analysis" 
                               Click="StopAgentButton_Click" IsEnabled="False"/>
                    </StackPanel>
                    
                    <!-- Progress -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,10">
                        <TextBlock x:Name="AgentStatusText" Text="Agent not running" FontWeight="Bold"/>
                        <ProgressBar x:Name="AgentProgressBar" Height="20" Margin="0,5,0,0"/>
                        <TextBlock x:Name="AgentProgressText" Text="" FontSize="10" Foreground="Gray" 
                                  Margin="0,2,0,0"/>
                    </StackPanel>
                    
                    <!-- RAG Indexing -->
                    <GroupBox Grid.Row="2" Header="RAG Indexing" Margin="0,0,0,10">
                        <StackPanel Margin="5">
                            <Button x:Name="IndexWorkspaceButton" Content="Index Current Workspace" 
                                   Click="IndexWorkspaceButton_Click" Margin="0,0,0,5"/>
                            <TextBlock x:Name="RAGStatusText" Text="No indexing in progress" FontSize="10"/>
                            <ProgressBar x:Name="RAGProgressBar" Height="15" Margin="0,5,0,0"/>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- Agent Results -->
                    <GroupBox Grid.Row="3" Header="Analysis Results">
                        <ScrollViewer>
                            <ItemsControl x:Name="AgentFindings">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="2" Padding="5" BorderBrush="Gray" BorderThickness="1" 
                                               CornerRadius="3">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="11"/>
                                                <TextBlock Text="{Binding Description}" FontSize="10" 
                                                          TextWrapping="Wrap" Margin="0,2,0,0"/>
                                                <TextBlock Text="{Binding FilePath}" FontSize="9" 
                                                          Foreground="Gray" Margin="0,2,0,0"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </GroupBox>
                </Grid>
            </TabItem>
            
            <!-- Configuration Tab -->
            <TabItem Header="Configuration">
                <ScrollViewer Margin="10">
                    <StackPanel>
                        <!-- API Connection -->
                        <GroupBox Header="API Connection" Margin="0,0,0,10">
                            <StackPanel Margin="5">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="API URL:" Width="80" VerticalAlignment="Center"/>
                                    <TextBox x:Name="ApiUrlTextBox" Text="http://localhost:8341" 
                                            Width="200" Margin="5,0,0,0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Button x:Name="ConnectButton" Content="Connect" 
                                           Click="ConnectButton_Click" Margin="0,0,5,0"/>
                                    <Button x:Name="DisconnectButton" Content="Disconnect" 
                                           Click="DisconnectButton_Click" IsEnabled="False"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                        
                        <!-- Auto Complete Settings -->
                        <GroupBox Header="Auto Complete" Margin="0,0,0,10">
                            <StackPanel Margin="5">
                                <CheckBox x:Name="AutoCompleteEnabledCheckBox" Content="Enable Auto Complete" 
                                         Checked="AutoCompleteEnabledCheckBox_Checked" 
                                         Unchecked="AutoCompleteEnabledCheckBox_Unchecked"/>
                            </StackPanel>
                        </GroupBox>
                        
                        <!-- MCP Servers -->
                        <GroupBox Header="MCP Servers" Margin="0,0,0,10">
                            <StackPanel Margin="5">
                                <ListView x:Name="MCPServersList" Height="120">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding Endpoint}" FontSize="10" 
                                                              Foreground="Gray"/>
                                                </StackPanel>
                                                
                                                <Ellipse Grid.Column="1" Width="8" Height="8" 
                                                        Fill="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}}" 
                                                        Margin="5"/>
                                                
                                                <Button Grid.Column="2" Content="Connect" FontSize="10" 
                                                       Padding="5,2" Tag="{Binding Id}"
                                                       Click="ConnectMCPServerButton_Click"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                                <Button x:Name="RefreshMCPServersButton" Content="Refresh Servers" 
                                       Click="RefreshMCPServersButton_Click" Margin="0,5,0,0"/>
                            </StackPanel>
                        </GroupBox>
                        
                        <!-- About -->
                        <GroupBox Header="About">
                            <StackPanel Margin="5">
                                <TextBlock Text="A3sist Visual Studio Extension" FontWeight="Bold"/>
                                <TextBlock Text="Version 1.0.0" FontSize="10" Foreground="Gray"/>
                                <TextBlock Text="AI-powered code assistant for Visual Studio" 
                                          FontSize="10" Margin="0,5,0,0" TextWrapping="Wrap"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#FF2D2D30" Padding="5">
            <TextBlock x:Name="StatusText" Text="Ready" Foreground="White" FontSize="10"/>
        </Border>
    </Grid>
</UserControl>