<Window x:Class="A3sist.UI.UI.ConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="A3sist Configuration" Height="700" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2D2D30" Padding="15">
            <StackPanel>
                <TextBlock Text="A3sist Configuration" Foreground="White" FontWeight="Bold" 
                          FontSize="16"/>
                <TextBlock Text="Configure your AI assistant settings" Foreground="#FFCCCCCC" 
                          FontSize="12" Margin="0,2,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="0" Background="White">
            <!-- API Settings Tab -->
            <TabItem Header="API Settings">
                <ScrollViewer Margin="20">
                    <StackPanel>
                        <!-- Connection Settings -->
                        <GroupBox Header="API Connection" Margin="0,0,0,20">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="API URL:" 
                                          VerticalAlignment="Center" Margin="0,0,10,10"/>
                                <TextBox Grid.Row="0" Grid.Column="1" x:Name="ApiUrlTextBox" 
                                        Text="http://localhost:8341" Margin="0,0,10,10"/>
                                <Button Grid.Row="0" Grid.Column="2" x:Name="TestConnectionButton" 
                                       Content="Test" Padding="10,3" Margin="0,0,0,10"
                                       Click="TestConnectionButton_Click"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Status:" 
                                          VerticalAlignment="Center" Margin="0,0,10,10"/>
                                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,10">
                                    <Ellipse x:Name="ConnectionIndicator" Width="10" Height="10" 
                                            Fill="Red" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="ConnectionStatusText" Text="Disconnected" 
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <CheckBox Grid.Row="2" Grid.Column="1" x:Name="AutoStartApiCheckBox" 
                                         Content="Auto-start API on extension load" Margin="0,0,0,10"
                                         Checked="AutoStartApiCheckBox_Checked" 
                                         Unchecked="AutoStartApiCheckBox_Unchecked"/>
                                
                                <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
                                    <Button x:Name="ConnectButton" Content="Connect" Padding="15,5" 
                                           Margin="0,0,10,0" Click="ConnectButton_Click"/>
                                    <Button x:Name="DisconnectButton" Content="Disconnect" Padding="15,5" 
                                           IsEnabled="False" Click="DisconnectButton_Click"/>
                                </StackPanel>
                            </Grid>
                        </GroupBox>
                        
                        <!-- Performance Settings -->
                        <GroupBox Header="Performance" Margin="0,0,0,20">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Request Timeout:" 
                                          VerticalAlignment="Center" Margin="0,0,10,10"/>
                                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBox x:Name="RequestTimeoutTextBox" Text="30" Width="60"/>
                                    <TextBlock Text="seconds" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                </StackPanel>
                                
                                <CheckBox Grid.Row="1" Grid.Column="1" x:Name="EnableLoggingCheckBox" 
                                         Content="Enable detailed logging" Margin="0,0,0,10"
                                         Checked="EnableLoggingCheckBox_Checked" 
                                         Unchecked="EnableLoggingCheckBox_Unchecked"/>
                                
                                <CheckBox Grid.Row="2" Grid.Column="1" x:Name="StreamResponsesCheckBox" 
                                         Content="Stream responses (faster feedback)" 
                                         Checked="StreamResponsesCheckBox_Checked" 
                                         Unchecked="StreamResponsesCheckBox_Unchecked"/>
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Models Tab -->
            <TabItem Header="Models">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Model List -->
                    <TextBlock Grid.Row="0" Text="Available Models" FontWeight="Bold" 
                              FontSize="14" Margin="0,0,0,10"/>
                    
                    <ListView Grid.Row="1" x:Name="ModelsList" Margin="0,0,0,10">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Width="520">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="12"/>
                                        <TextBlock Text="{Binding Provider}" FontSize="10" Foreground="Gray"/>
                                        <TextBlock Text="{Binding Endpoint}" FontSize="10" Foreground="Gray"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                        <Ellipse Width="8" Height="8" Margin="5,0,5,0">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsAvailable}" Value="True">
                                                            <Setter Property="Fill" Value="Green"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsAvailable}" Value="False">
                                                            <Setter Property="Fill" Value="Red"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>
                                        <TextBlock Text="{Binding IsAvailable, Converter={StaticResource BoolToStatusConverter}}" 
                                                  FontSize="10"/>
                                    </StackPanel>
                                    
                                    <Button Grid.Column="2" Content="Test" FontSize="10" Padding="8,3" 
                                           Margin="5,0,5,0" Tag="{Binding Id}"
                                           Click="TestModelButton_Click"/>
                                    
                                    <Button Grid.Column="3" Content="Set Active" FontSize="10" Padding="8,3" 
                                           Tag="{Binding Id}" Click="SetActiveModelButton_Click"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    
                    <!-- Model Actions -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal">
                        <Button x:Name="AddModelButton" Content="Add Model" Padding="10,5" 
                               Margin="0,0,10,0" Click="AddModelButton_Click"/>
                        <Button x:Name="RefreshModelsButton" Content="Refresh" Padding="10,5" 
                               Margin="0,0,10,0" Click="RefreshModelsButton_Click"/>
                        <Button x:Name="RemoveModelButton" Content="Remove Selected" Padding="10,5" 
                               Click="RemoveModelButton_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <!-- MCP Servers Tab -->
            <TabItem Header="MCP Servers">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Server List -->
                    <TextBlock Grid.Row="0" Text="MCP Servers" FontWeight="Bold" 
                              FontSize="14" Margin="0,0,0,10"/>
                    
                    <ListView Grid.Row="1" x:Name="MCPServersList" Margin="0,0,0,10">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Width="520">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="12"/>
                                        <TextBlock Text="{Binding Description}" FontSize="10" Foreground="Gray"/>
                                        <TextBlock Text="{Binding Endpoint}" FontSize="10" Foreground="Gray"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                        <Ellipse Width="8" Height="8" Margin="5,0,5,0">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                                            <Setter Property="Fill" Value="Green"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsConnected}" Value="False">
                                                            <Setter Property="Fill" Value="Red"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>
                                        <TextBlock Text="{Binding IsConnected, Converter={StaticResource BoolToStatusConverter}}" 
                                                  FontSize="10"/>
                                    </StackPanel>
                                    
                                    <Button Grid.Column="2" FontSize="10" Padding="8,3" Margin="5,0,5,0" 
                                           Tag="{Binding Id}" Click="ToggleMCPServerButton_Click">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                                        <Setter Property="Content" Value="Disconnect"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsConnected}" Value="False">
                                                        <Setter Property="Content" Value="Connect"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    
                                    <Button Grid.Column="3" Content="Tools" FontSize="10" Padding="8,3" 
                                           Tag="{Binding Id}" Click="ViewToolsButton_Click"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    
                    <!-- Server Actions -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal">
                        <Button x:Name="AddMCPServerButton" Content="Add Server" Padding="10,5" 
                               Margin="0,0,10,0" Click="AddMCPServerButton_Click"/>
                        <Button x:Name="RefreshMCPServersButton" Content="Refresh" Padding="10,5" 
                               Margin="0,0,10,0" Click="RefreshMCPServersButton_Click"/>
                        <Button x:Name="RemoveMCPServerButton" Content="Remove Selected" Padding="10,5" 
                               Click="RemoveMCPServerButton_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <!-- Features Tab -->
            <TabItem Header="Features">
                <ScrollViewer Margin="20">
                    <StackPanel>
                        <!-- Auto Complete -->
                        <GroupBox Header="Auto Complete" Margin="0,0,0,20">
                            <StackPanel Margin="10">
                                <CheckBox x:Name="AutoCompleteEnabledCheckBox" 
                                         Content="Enable AI-powered auto completion" Margin="0,0,0,10"
                                         Checked="AutoCompleteEnabledCheckBox_Checked" 
                                         Unchecked="AutoCompleteEnabledCheckBox_Unchecked"/>
                                <CheckBox x:Name="AutoCompleteSnippetsCheckBox" 
                                         Content="Include code snippets in completions" Margin="0,0,0,10"/>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock Text="Max suggestions:" VerticalAlignment="Center" 
                                              Margin="0,0,10,0"/>
                                    <TextBox x:Name="MaxSuggestionsTextBox" Text="10" Width="50"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                        
                        <!-- Code Analysis -->
                        <GroupBox Header="Code Analysis" Margin="0,0,0,20">
                            <StackPanel Margin="10">
                                <CheckBox x:Name="RealTimeAnalysisCheckBox" 
                                         Content="Enable real-time code analysis" Margin="0,0,0,10"/>
                                <CheckBox x:Name="ShowSuggestionsCheckBox" 
                                         Content="Show quick fix suggestions" Margin="0,0,0,10"/>
                                <CheckBox x:Name="ShowCodeIssuesCheckBox" 
                                         Content="Highlight code issues" Margin="0,0,0,10"/>
                            </StackPanel>
                        </GroupBox>
                        
                        <!-- Agent Mode -->
                        <GroupBox Header="Agent Mode" Margin="0,0,0,20">
                            <StackPanel Margin="10">
                                <CheckBox x:Name="AutoStartAgentCheckBox" 
                                         Content="Auto-start agent analysis on workspace open" Margin="0,0,0,10"/>
                                <CheckBox x:Name="BackgroundAnalysisCheckBox" 
                                         Content="Run analysis in background" Margin="0,0,0,10"/>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock Text="Analysis interval (minutes):" VerticalAlignment="Center" 
                                              Margin="0,0,10,0"/>
                                    <TextBox x:Name="AnalysisIntervalTextBox" Text="30" Width="50"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                        
                        <!-- RAG System -->
                        <GroupBox Header="RAG System">
                            <StackPanel Margin="10">
                                <CheckBox x:Name="AutoIndexWorkspaceCheckBox" 
                                         Content="Auto-index workspace on open" Margin="0,0,0,10"/>
                                <CheckBox x:Name="IndexDependenciesCheckBox" 
                                         Content="Include external dependencies in index" Margin="0,0,0,10"/>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock Text="Max search results:" VerticalAlignment="Center" 
                                              Margin="0,0,10,0"/>
                                    <TextBox x:Name="MaxSearchResultsTextBox" Text="10" Width="50"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        
        <!-- Action Buttons -->
        <Border Grid.Row="2" Background="#FFF5F5F5" Padding="20,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="SaveButton" Content="Save Settings" Padding="15,8" 
                       Margin="0,0,10,0" Click="SaveButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FF4CAF50"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </Button.Style>
                </Button>
                <Button x:Name="CancelButton" Content="Cancel" Padding="15,8" 
                       Click="CancelButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FFEEEEEE"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>