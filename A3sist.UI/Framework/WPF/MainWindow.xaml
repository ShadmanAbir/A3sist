<Window x:Class="A3sist.UI.Framework.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="A3sist - AI-Powered Coding Assistant" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/Resources/A3sistCommands.png">
    
    <Window.Resources>
        <Style TargetType="Window">
            <Setter Property="Background" Value="{DynamicResource BackgroundBrush}"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0" Background="{DynamicResource PrimaryBrush}" Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Image Grid.Column="0" 
                       Source="pack://application:,,,/Resources/A3sistCommands.png" 
                       Width="24" Height="24" 
                       Margin="0,0,12,0"/>
                
                <TextBlock Grid.Column="1" 
                           Text="A3sist - AI-Powered Coding Assistant" 
                           Foreground="White" 
                           FontSize="16" 
                           FontWeight="Medium"
                           VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="ðŸš€ Ready" 
                               Foreground="White" 
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <Ellipse Width="8" Height="8" Fill="#4CAF50"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Row="1" 
                Background="{DynamicResource SurfaceBrush}"
                Margin="0">
            <!-- Content will be set programmatically in code-behind -->
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="{DynamicResource BackgroundBrush}" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,1,0,0"
                Padding="16,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="Ready for AI-powered assistance" 
                           Foreground="{DynamicResource TextBrush}"
                           FontSize="12"
                           VerticalAlignment="Center"/>
                
                <TextBlock Grid.Column="1" 
                           Text=".NET 9 | WPF" 
                           Foreground="{DynamicResource TextBrush}"
                           FontSize="12"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>