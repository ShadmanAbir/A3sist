<UserControl x:Class="A3sist.UI.Framework.WPF.Views.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    
    <UserControl.Resources>
        <!-- Chat Message Style -->
        <Style x:Key="ChatMessageStyle" TargetType="Border">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="MaxWidth" Value="400"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        
        <!-- User Message Style -->
        <Style x:Key="UserMessageStyle" TargetType="Border" BasedOn="{StaticResource ChatMessageStyle}">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
        
        <!-- Assistant Message Style -->
        <Style x:Key="AssistantMessageStyle" TargetType="Border" BasedOn="{StaticResource ChatMessageStyle}">
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        
        <!-- RAG Enhanced Message Style -->
        <Style x:Key="RAGMessageStyle" TargetType="Border" BasedOn="{StaticResource AssistantMessageStyle}">
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        
        <!-- Error Message Style -->
        <Style x:Key="ErrorMessageStyle" TargetType="Border" BasedOn="{StaticResource ChatMessageStyle}">
            <Setter Property="Background" Value="#FFE6E6"/>
            <Setter Property="BorderBrush" Value="#FF4444"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header with RAG Controls -->
        <Grid Grid.Row="0" Background="#2D2D30" Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Text="A3sist Chat" 
                       Foreground="White" FontSize="16" FontWeight="Bold"
                       VerticalAlignment="Center" Margin="10"/>
            
            <Button Grid.Column="1" Content="Knowledge Mode" 
                    Click="KnowledgeMode_Click" Margin="5"
                    Background="#4CAF50" Foreground="White"
                    Padding="10,5" BorderThickness="0"/>
            
            <Button Grid.Column="2" Content="Clear Chat" 
                    Click="ClearChat_Click" Margin="5"
                    Background="#FF6B6B" Foreground="White"
                    Padding="10,5" BorderThickness="0"/>
            
            <Button Grid.Column="3" Content="Settings" 
                    Click="Settings_Click" Margin="5"
                    Background="#6C757D" Foreground="White"
                    Padding="10,5" BorderThickness="0"/>
        </Grid>
        
        <!-- Chat Messages Area -->
        <ScrollViewer Grid.Row="1" Name="ChatScrollViewer" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      Background="White" Margin="5">
            <ItemsControl Name="MessagesPanel" ItemsSource="{Binding Messages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{Binding MessageStyle}">
                            <StackPanel>
                                <!-- Message Content -->
                                <TextBlock Text="{Binding Content}" 
                                          TextWrapping="Wrap" 
                                          Foreground="{Binding TextColor}"
                                          FontSize="13" LineHeight="18"/>
                                
                                <!-- Timestamp and RAG Info -->
                                <Grid Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" 
                                              Text="{Binding Timestamp, StringFormat='{}{0:HH:mm}'}"
                                              FontSize="10" Opacity="0.7"
                                              Foreground="{Binding TextColor}"/>
                                    
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" 
                                               Visibility="{Binding HasRAGContext, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Text="ðŸ§ " FontSize="12" Margin="5,0,2,0" 
                                                  ToolTip="Enhanced with knowledge"/>
                                        <TextBlock Text="{Binding KnowledgeSourceCount}" 
                                                  FontSize="10" Opacity="0.7"
                                                  Foreground="{Binding TextColor}"/>
                                    </StackPanel>
                                </Grid>
                                
                                <!-- Citations Panel -->
                                <Expander Header="Knowledge Sources" 
                                         Visibility="{Binding HasCitations, Converter={StaticResource BoolToVisibilityConverter}}"
                                         Margin="0,5,0,0" IsExpanded="False">
                                    <ItemsControl ItemsSource="{Binding Citations}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="11"/>
                                                        <TextBlock Text="{Binding Source}" FontSize="10" Opacity="0.8"/>
                                                        <TextBlock Text="{Binding Description}" FontSize="10" 
                                                                  TextWrapping="Wrap" Margin="0,2,0,0"
                                                                  Visibility="{Binding Description, Converter={StaticResource StringToVisibilityConverter}}"/>
                                                    </StackPanel>
                                                    
                                                    <TextBlock Grid.Column="1" 
                                                              Text="{Binding Relevance, StringFormat='P1'}"
                                                              FontSize="10" VerticalAlignment="Top"
                                                              Foreground="#4CAF50" FontWeight="Bold"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Expander>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Typing Indicator -->
        <Border Grid.Row="2" Background="#F8F9FA" Margin="5" Padding="10"
                Visibility="{Binding IsTyping, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="A3sist is thinking" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Name="TypingDots" Text="..." VerticalAlignment="Center">
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <StringAnimationUsingKeyFrames Storyboard.TargetProperty="Text" Duration="0:0:1.5">
                                        <DiscreteStringKeyFrame KeyTime="0:0:0" Value="."/>
                                        <DiscreteStringKeyFrame KeyTime="0:0:0.5" Value=".."/>
                                        <DiscreteStringKeyFrame KeyTime="0:0:1" Value="..."/>
                                    </StringAnimationUsingKeyFrames>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>
            </StackPanel>
        </Border>
        
        <!-- Input Area -->
        <Grid Grid.Row="3" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Context Indicators -->
            <StackPanel Grid.Row="0" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0,0,0,5"
                       Visibility="{Binding HasContext, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock Text="Context:" FontSize="11" Foreground="#6C757D" Margin="0,0,5,0"/>
                <Border Background="#E3F2FD" Padding="3,1" CornerRadius="3" Margin="2"
                       Visibility="{Binding HasSelectedCode, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="Selected Code" FontSize="10" Foreground="#1976D2"/>
                </Border>
                <Border Background="#E8F5E8" Padding="3,1" CornerRadius="3" Margin="2"
                       Visibility="{Binding HasFileContext, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="{Binding CurrentFileName}" FontSize="10" Foreground="#388E3C"/>
                </Border>
            </StackPanel>
            
            <!-- Message Input -->
            <TextBox Grid.Row="1" Grid.Column="0" Name="MessageInput" 
                     Text="{Binding CurrentMessage, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True" TextWrapping="Wrap" 
                     VerticalScrollBarVisibility="Auto"
                     MaxHeight="100" MinHeight="30"
                     Padding="10" BorderThickness="1" BorderBrush="#CCC"
                     KeyDown="MessageInput_KeyDown" 
                     IsEnabled="{Binding IsInputEnabled}"/>
            
            <!-- Context Buttons -->
            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" Margin="5,0">
                <Button Content="ðŸ“Ž" ToolTip="Attach File Context" 
                        Click="AttachFile_Click" Margin="0,0,0,2"
                        Width="30" Height="25" FontSize="12"/>
                <Button Content="ðŸ“‹" ToolTip="Attach Selected Code" 
                        Click="AttachSelection_Click"
                        Width="30" Height="25" FontSize="12"/>
            </StackPanel>
            
            <!-- Send Button -->
            <Button Grid.Row="1" Grid.Column="2" Content="Send" 
                    Click="Send_Click" Margin="5,0,0,0"
                    Background="#007ACC" Foreground="White"
                    Padding="15,5" FontWeight="Bold"
                    IsEnabled="{Binding CanSendMessage}"/>
        </Grid>
    </Grid>
</UserControl>