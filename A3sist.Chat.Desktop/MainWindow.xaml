<Window x:Class="A3sist.Chat.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="A3sist Chat Desktop - AI-Powered Coding Assistant" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>    <!-- Title Bar -->
            <RowDefinition Height="*"/>       <!-- Main Content -->
            <RowDefinition Height="Auto"/>    <!-- Status Bar -->
        </Grid.RowDefinitions>
        
        <!-- Title Bar -->
        <Border Grid.Row="0" Background="#2D2D30" Height="40">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logo and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                    <TextBlock Text="ðŸ¤–" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="A3sist Chat Desktop" FontSize="16" FontWeight="Bold" 
                              Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Status -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                    <TextBlock Name="StatusText" Text="Ready" FontSize="12" 
                              Foreground="#4CAF50" VerticalAlignment="Center"/>
                    <Ellipse Width="8" Height="8" Fill="#4CAF50" Margin="5,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Border Grid.Row="1" Name="ContentBorder" Background="White" Margin="5">
            <!-- Chat content will be placed here -->
        </Border>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#F5F5F5" Height="25" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="A3sist Chat Desktop v1.0.0" 
                          FontSize="11" Foreground="#6C757D" VerticalAlignment="Center" Margin="10,0"/>
                
                <TextBlock Grid.Column="1" Name="ConnectionStatus" Text="Standalone Mode" 
                          FontSize="11" Foreground="#6C757D" VerticalAlignment="Center" Margin="10,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>