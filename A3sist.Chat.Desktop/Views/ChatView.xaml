<UserControl x:Class="A3sist.Chat.Desktop.Views.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    
    <UserControl.Resources>
        <!-- Chat Message Styles -->
        <Style x:Key="ChatMessageStyle" TargetType="Border">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="MaxWidth" Value="400"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        
        <Style x:Key="UserMessageStyle" TargetType="Border" BasedOn="{StaticResource ChatMessageStyle}">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
        
        <Style x:Key="AssistantMessageStyle" TargetType="Border" BasedOn="{StaticResource ChatMessageStyle}">
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        
        <Style x:Key="ErrorMessageStyle" TargetType="Border" BasedOn="{StaticResource ChatMessageStyle}">
            <Setter Property="Background" Value="#FFE6E6"/>
            <Setter Property="BorderBrush" Value="#FF4444"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Grid Grid.Row="0" Background="#2D2D30" Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Text="A3sist Chat" 
                       Foreground="White" FontSize="16" FontWeight="Bold"
                       VerticalAlignment="Center" Margin="10"/>
            
            <Button Grid.Column="1" Content="Clear Chat" 
                    Click="ClearChat_Click" Margin="5"
                    Background="#FF6B6B" Foreground="White"
                    Padding="10,5" BorderThickness="0"/>
            
            <Button Grid.Column="2" Content="Attach File" 
                    Click="AttachFile_Click" Margin="5"
                    Background="#28A745" Foreground="White"
                    Padding="10,5" BorderThickness="0"/>
            
            <Button Grid.Column="3" Content="Settings" 
                    Click="Settings_Click" Margin="5"
                    Background="#6C757D" Foreground="White"
                    Padding="10,5" BorderThickness="0"/>
        </Grid>
        
        <!-- Chat Messages Area -->
        <ScrollViewer Grid.Row="1" Name="ChatScrollViewer" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      Background="White" Margin="5">
            <ItemsControl Name="MessagesPanel" ItemsSource="{Binding Messages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{Binding MessageStyle}">
                            <StackPanel>
                                <TextBlock Text="{Binding Content}" 
                                          TextWrapping="Wrap" 
                                          Foreground="{Binding TextColor}"
                                          FontSize="13" LineHeight="18"/>
                                
                                <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm}'}"
                                          FontSize="10" Opacity="0.7"
                                          Foreground="{Binding TextColor}"
                                          Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Typing Indicator -->
        <Border Grid.Row="2" Background="#F8F9FA" Margin="5" Padding="10"
                Visibility="{Binding IsTyping, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="A3sist is thinking" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Name="TypingDots" Text="..." VerticalAlignment="Center">
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <StringAnimationUsingKeyFrames Storyboard.TargetProperty="Text" Duration="0:0:1.5">
                                        <DiscreteStringKeyFrame KeyTime="0:0:0" Value="."/>
                                        <DiscreteStringKeyFrame KeyTime="0:0:0.5" Value=".."/>
                                        <DiscreteStringKeyFrame KeyTime="0:0:1" Value="..."/>
                                    </StringAnimationUsingKeyFrames>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>
            </StackPanel>
        </Border>
        
        <!-- Input Area -->
        <Grid Grid.Row="3" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBox Grid.Column="0" Name="MessageInput"
                     Text="{Binding CurrentMessage, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True" TextWrapping="Wrap"
                     MaxHeight="100" MinHeight="30"
                     VerticalScrollBarVisibility="Auto"
                     IsEnabled="{Binding IsInputEnabled}"
                     Style="{StaticResource ModernTextBoxStyle}"
                     KeyDown="MessageInput_KeyDown"
                     Margin="0,0,5,0"/>
            
            <Button Grid.Column="1" Content="Send" 
                    Click="Send_Click"
                    IsEnabled="{Binding CanSendMessage}"
                    Style="{StaticResource ModernButtonStyle}"
                    Width="80" Height="30"/>
        </Grid>
    </Grid>
</UserControl>