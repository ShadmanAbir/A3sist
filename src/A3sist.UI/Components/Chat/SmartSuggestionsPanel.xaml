<UserControl x:Class="A3sist.UI.Components.Chat.SmartSuggestionsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vs="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             xmlns:local="clr-namespace:A3sist.UI.Components.Chat"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="400"
             Background="{DynamicResource VsBrush.Window}">

    <UserControl.Resources>
        <Style x:Key="SuggestionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource VsBrush.CommandBarGradientBegin}"/>
            <Setter Property="Foreground" Value="{DynamicResource VsBrush.CommandBarText}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource VsBrush.CommandBarBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               BorderBrush="{TemplateBinding BorderBrush}"
                               BorderThickness="{TemplateBinding BorderThickness}"
                               CornerRadius="4"
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource VsBrush.CommandBarHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource VsBrush.CommandBarSelected}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="QuickActionButtonStyle" TargetType="Button" BasedOn="{StaticResource SuggestionButtonStyle}">
            <Setter Property="Background" Value="{DynamicResource VsBrush.AccentLight}"/>
            <Setter Property="Foreground" Value="{DynamicResource VsBrush.WindowText}"/>
        </Style>

        <Style x:Key="CategoryHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{DynamicResource VsBrush.WindowText}"/>
            <Setter Property="Margin" Value="8,8,8,4"/>
        </Style>
    </UserControl.Resources>

    <Border BorderBrush="{DynamicResource VsBrush.ToolWindowBorder}"
           BorderThickness="1"
           Background="{DynamicResource VsBrush.ToolWindowBackground}"
           CornerRadius="6"
           Padding="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <DockPanel Grid.Row="0" Margin="0,0,0,8">
                <TextBlock Text="ðŸ’¡ Smart Suggestions" 
                          FontWeight="Bold"
                          FontSize="14"
                          Foreground="{DynamicResource VsBrush.WindowText}"
                          DockPanel.Dock="Left"/>
                
                <Button Content="ðŸ”„" 
                       Style="{StaticResource SuggestionButtonStyle}"
                       Command="{Binding RefreshSuggestionsCommand}"
                       ToolTip="Refresh Suggestions"
                       Width="24" Height="24"
                       DockPanel.Dock="Right"
                       HorizontalAlignment="Right"/>
            </DockPanel>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" 
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    
                    <!-- Quick Actions -->
                    <Grid Visibility="{Binding HasQuickActions, Converter={x:Static local:BooleanToVisibilityConverter.Instance}}">
                        <StackPanel>
                            <TextBlock Text="âš¡ Quick Actions" Style="{StaticResource CategoryHeaderStyle}"/>
                            
                            <ItemsControl ItemsSource="{Binding QuickActions}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Style="{StaticResource QuickActionButtonStyle}"
                                               Command="{Binding DataContext.ExecuteQuickActionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                               CommandParameter="{Binding}"
                                               ToolTip="{Binding Description}"
                                               HorizontalAlignment="Stretch"
                                               HorizontalContentAlignment="Left">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Title}" 
                                                          FontSize="11"
                                                          TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Grid>

                    <!-- Context Information -->
                    <Grid Visibility="{Binding HasContextInfo, Converter={x:Static local:BooleanToVisibilityConverter.Instance}}"
                         Margin="0,12,0,0">
                        <StackPanel>
                            <TextBlock Text="ðŸ“Š Context Info" Style="{StaticResource CategoryHeaderStyle}"/>
                            
                            <Border Background="{DynamicResource VsBrush.InfoBackground}"
                                   BorderBrush="{DynamicResource VsBrush.InfoBorder}"
                                   BorderThickness="1"
                                   CornerRadius="4"
                                   Padding="8"
                                   Margin="4">
                                <StackPanel>
                                    <TextBlock Text="{Binding CurrentFileInfo}" 
                                              FontSize="11"
                                              Foreground="{DynamicResource VsBrush.InfoText}"
                                              Visibility="{Binding CurrentFileInfo, Converter={x:Static local:NullOrEmptyToVisibilityConverter.Instance}}"/>
                                    
                                    <TextBlock Text="{Binding SelectionInfo}" 
                                              FontSize="11"
                                              Foreground="{DynamicResource VsBrush.InfoText}"
                                              Margin="0,2,0,0"
                                              Visibility="{Binding SelectionInfo, Converter={x:Static local:NullOrEmptyToVisibilityConverter.Instance}}"/>
                                    
                                    <TextBlock Text="{Binding ErrorInfo}" 
                                              FontSize="11"
                                              Foreground="{DynamicResource VsBrush.InfoText}"
                                              Margin="0,2,0,0"
                                              Visibility="{Binding ErrorInfo, Converter={x:Static local:NullOrEmptyToVisibilityConverter.Instance}}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Contextual Suggestions -->
                    <Grid Visibility="{Binding HasSuggestions, Converter={x:Static local:BooleanToVisibilityConverter.Instance}}"
                         Margin="0,12,0,0">
                        <StackPanel>
                            <TextBlock Text="ðŸ’­ Suggestions" Style="{StaticResource CategoryHeaderStyle}"/>
                            
                            <ItemsControl ItemsSource="{Binding ContextualSuggestions}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Style="{StaticResource SuggestionButtonStyle}"
                                               Command="{Binding DataContext.ApplySuggestionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                               CommandParameter="{Binding}"
                                               HorizontalAlignment="Stretch"
                                               HorizontalContentAlignment="Left">
                                            <TextBlock Text="{Binding}" 
                                                      FontSize="11"
                                                      TextTrimming="CharacterEllipsis"/>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Grid>

                    <!-- Empty State -->
                    <Grid Visibility="{Binding IsEmpty, Converter={x:Static local:BooleanToVisibilityConverter.Instance}}"
                         Margin="0,20,0,0">
                        <StackPanel HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   Opacity="0.6">
                            <TextBlock Text="ðŸ¤”" 
                                      FontSize="32"
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,8"/>
                            <TextBlock Text="No suggestions available" 
                                      FontSize="12"
                                      Foreground="{DynamicResource VsBrush.GrayText}"
                                      HorizontalAlignment="Center"/>
                            <TextBlock Text="Start coding to see smart suggestions" 
                                      FontSize="10"
                                      Foreground="{DynamicResource VsBrush.GrayText}"
                                      HorizontalAlignment="Center"
                                      Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>