<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="A3sist.UI.MAUI.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="A3sist AI Assistant">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">
            
            <!-- Header -->
            <Grid>
                <Rectangle Fill="DarkBlue" HeightRequest="80" RadiusX="10" RadiusY="10"/>
                <Label x:Name="WelcomeLabel"
                       Text="🤖 A3sist AI Assistant"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
            </Grid>

            <!-- Status Card -->
            <Frame BackgroundColor="LightBlue" HasShadow="True" CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="System Status" FontSize="18" FontAttributes="Bold" />
                    <Label x:Name="StatusLabel" Text="Ready" FontSize="14" />
                    <Label x:Name="AgentCountLabel" Text="Agents: Loading..." FontSize="12" />
                </VerticalStackLayout>
            </Frame>

            <!-- Quick Actions -->
            <Frame BackgroundColor="White" HasShadow="True" CornerRadius="10">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Quick Actions" FontSize="18" FontAttributes="Bold" />
                    
                    <Button x:Name="ChatBtn"
                            Text="💬 Open Chat"
                            FontSize="16"
                            BackgroundColor="DarkBlue"
                            TextColor="White"
                            CornerRadius="5"
                            Clicked="OnChatClicked" />
                    
                    <Button x:Name="AgentsBtn"
                            Text="🤖 View Agents"
                            FontSize="16"
                            BackgroundColor="DarkGreen"
                            TextColor="White"
                            CornerRadius="5"
                            Clicked="OnAgentsClicked" />
                    
                    <Button x:Name="SettingsBtn"
                            Text="⚙️ Settings"
                            FontSize="16"
                            BackgroundColor="DarkOrange"
                            TextColor="White"
                            CornerRadius="5"
                            Clicked="OnSettingsClicked" />
                </VerticalStackLayout>
            </Frame>

            <!-- Recent Activity -->
            <Frame BackgroundColor="White" HasShadow="True" CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Recent Activity" FontSize="18" FontAttributes="Bold" />
                    <Label Text="• Chat session started" FontSize="12" TextColor="Gray" />
                    <Label Text="• Code analysis completed" FontSize="12" TextColor="Gray" />
                    <Label Text="• 3 agents available" FontSize="12" TextColor="Gray" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>