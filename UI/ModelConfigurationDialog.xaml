<Window x:Class="A3sist.UI.ModelConfigurationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Model Configuration" 
        Height="500" 
        Width="600"
        MinHeight="400"
        MinWidth="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Icon="/A3sist;component/A3sist.ico">
    
    <Window.Resources>
        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,5,0,2"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Margin" Value="0,2,0,10"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E1E1E1"/>
        </Style>
        
        <Style x:Key="NumericTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource TextBoxStyle}">
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
        </Style>
        
        <Style x:Key="DialogButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#106EBE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource DialogButtonStyle}">
            <Setter Property="Background" Value="#F3F2F1"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E1E1E1"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Configure AI Model" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Configuration Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Basic Information -->
                <GroupBox Header="Basic Information" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <Label Content="Model Name:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Name="ModelNameTextBox" 
                                Style="{StaticResource TextBoxStyle}"
                                ToolTip="Enter a descriptive name for this model"/>

                        <Label Content="Model Type:" Style="{StaticResource LabelStyle}"/>
                        <ComboBox Name="ModelTypeComboBox" 
                                 Margin="0,2,0,10"
                                 Padding="8,6"
                                 BorderThickness="1"
                                 BorderBrush="#E1E1E1"
                                 SelectionChanged="ModelTypeComboBox_SelectionChanged"/>

                        <Label Content="Model Provider:" Style="{StaticResource LabelStyle}"/>
                        <ComboBox Name="ModelProviderComboBox" 
                                 Margin="0,2,0,10"
                                 Padding="8,6"
                                 BorderThickness="1"
                                 BorderBrush="#E1E1E1"/>
                    </StackPanel>
                </GroupBox>

                <!-- Connection Settings -->
                <GroupBox Header="Connection Settings" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <Label Content="Endpoint URL:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Name="EndpointTextBox" 
                                Style="{StaticResource TextBoxStyle}"
                                ToolTip="Base URL for the model API endpoint"/>

                        <Label Content="API Key:" Style="{StaticResource LabelStyle}"/>
                        <PasswordBox Name="ApiKeyPasswordBox" 
                                    Margin="0,2,0,10"
                                    Padding="8,6"
                                    BorderThickness="1"
                                    BorderBrush="#E1E1E1"
                                    ToolTip="API key for authentication (if required)"/>

                        <Label Content="Model ID/Name:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Name="ModelIdTextBox" 
                                Style="{StaticResource TextBoxStyle}"
                                ToolTip="Specific model identifier (e.g., 'gpt-4', 'llama2:7b')"/>

                        <CheckBox Name="UseCustomHeadersCheckBox" 
                                 Content="Use Custom Headers" 
                                 Margin="0,5,0,5"
                                 Checked="UseCustomHeadersCheckBox_Checked"
                                 Unchecked="UseCustomHeadersCheckBox_Unchecked"/>

                        <TextBox Name="CustomHeadersTextBox" 
                                Style="{StaticResource TextBoxStyle}"
                                AcceptsReturn="True"
                                Height="60"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto"
                                IsEnabled="False"
                                ToolTip="JSON format custom headers (one per line)"/>
                    </StackPanel>
                </GroupBox>

                <!-- Model Parameters -->
                <GroupBox Header="Model Parameters" Margin="0,0,0,15">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <Label Content="Max Tokens:" Style="{StaticResource LabelStyle}"/>
                            <TextBox Name="MaxTokensTextBox" 
                                    Style="{StaticResource NumericTextBoxStyle}"
                                    Text="2048"
                                    ToolTip="Maximum number of tokens to generate"/>

                            <Label Content="Temperature:" Style="{StaticResource LabelStyle}"/>
                            <StackPanel Orientation="Horizontal">
                                <Slider Name="TemperatureSlider" 
                                       Minimum="0" 
                                       Maximum="2" 
                                       Value="0.7" 
                                       Width="120"
                                       VerticalAlignment="Center"
                                       ValueChanged="TemperatureSlider_ValueChanged"/>
                                <TextBox Name="TemperatureTextBox" 
                                        Text="0.7" 
                                        Width="60" 
                                        Margin="10,0,0,0"
                                        TextAlignment="Center"
                                        VerticalAlignment="Center"
                                        TextChanged="TemperatureTextBox_TextChanged"/>
                            </StackPanel>

                            <Label Content="Top P:" Style="{StaticResource LabelStyle}"/>
                            <StackPanel Orientation="Horizontal">
                                <Slider Name="TopPSlider" 
                                       Minimum="0" 
                                       Maximum="1" 
                                       Value="0.9" 
                                       Width="120"
                                       VerticalAlignment="Center"
                                       ValueChanged="TopPSlider_ValueChanged"/>
                                <TextBox Name="TopPTextBox" 
                                        Text="0.9" 
                                        Width="60" 
                                        Margin="10,0,0,0"
                                        TextAlignment="Center"
                                        VerticalAlignment="Center"
                                        TextChanged="TopPTextBox_TextChanged"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2">
                            <Label Content="Timeout (seconds):" Style="{StaticResource LabelStyle}"/>
                            <TextBox Name="TimeoutTextBox" 
                                    Style="{StaticResource NumericTextBoxStyle}"
                                    Text="30"
                                    ToolTip="Request timeout in seconds"/>

                            <Label Content="Retry Count:" Style="{StaticResource LabelStyle}"/>
                            <TextBox Name="RetryCountTextBox" 
                                    Style="{StaticResource NumericTextBoxStyle}"
                                    Text="3"
                                    ToolTip="Number of retry attempts on failure"/>

                            <CheckBox Name="StreamResponseCheckBox" 
                                     Content="Stream Response" 
                                     Margin="0,10,0,5"
                                     IsChecked="True"
                                     ToolTip="Enable streaming responses for real-time output"/>

                            <CheckBox Name="EnableLoggingCheckBox" 
                                     Content="Enable Logging" 
                                     Margin="0,5,0,5"
                                     IsChecked="True"
                                     ToolTip="Log requests and responses for debugging"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Advanced Settings -->
                <Expander Header="Advanced Settings" IsExpanded="False">
                    <StackPanel Margin="10">
                        <Label Content="System Message:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Name="SystemMessageTextBox" 
                                Style="{StaticResource TextBoxStyle}"
                                AcceptsReturn="True"
                                Height="80"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto"
                                ToolTip="Default system message to include with requests"/>

                        <Label Content="Stop Sequences:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Name="StopSequencesTextBox" 
                                Style="{StaticResource TextBoxStyle}"
                                ToolTip="Comma-separated list of stop sequences"/>

                        <Label Content="Frequency Penalty:" Style="{StaticResource LabelStyle}"/>
                        <StackPanel Orientation="Horizontal">
                            <Slider Name="FrequencyPenaltySlider" 
                                   Minimum="-2" 
                                   Maximum="2" 
                                   Value="0" 
                                   Width="120"
                                   VerticalAlignment="Center"
                                   ValueChanged="FrequencyPenaltySlider_ValueChanged"/>
                            <TextBox Name="FrequencyPenaltyTextBox" 
                                    Text="0" 
                                    Width="60" 
                                    Margin="10,0,0,0"
                                    TextAlignment="Center"
                                    VerticalAlignment="Center"
                                    TextChanged="FrequencyPenaltyTextBox_TextChanged"/>
                        </StackPanel>

                        <Label Content="Presence Penalty:" Style="{StaticResource LabelStyle}"/>
                        <StackPanel Orientation="Horizontal">
                            <Slider Name="PresencePenaltySlider" 
                                   Minimum="-2" 
                                   Maximum="2" 
                                   Value="0" 
                                   Width="120"
                                   VerticalAlignment="Center"
                                   ValueChanged="PresencePenaltySlider_ValueChanged"/>
                            <TextBox Name="PresencePenaltyTextBox" 
                                    Text="0" 
                                    Width="60" 
                                    Margin="10,0,0,0"
                                    TextAlignment="Center"
                                    VerticalAlignment="Center"
                                    TextChanged="PresencePenaltyTextBox_TextChanged"/>
                        </StackPanel>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </ScrollViewer>

        <!-- Button Panel -->
        <Border Grid.Row="2" 
                BorderThickness="0,1,0,0" 
                BorderBrush="#E1E1E1" 
                Padding="0,15,0,0" 
                Margin="0,15,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Test Connection" 
                       Name="TestConnectionButton"
                       Style="{StaticResource SecondaryButtonStyle}"
                       Click="TestConnectionButton_Click"/>
                <Button Content="Cancel" 
                       IsCancel="True"
                       Style="{StaticResource SecondaryButtonStyle}"
                       Click="CancelButton_Click"/>
                <Button Content="OK" 
                       IsDefault="True"
                       Name="OkButton"
                       Style="{StaticResource DialogButtonStyle}"
                       Click="OkButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>