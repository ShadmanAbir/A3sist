<Window x:Class="A3sist.UI.MCPServerConfigurationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MCP Server Configuration" 
        Height="600" 
        Width="700"
        MinHeight="500"
        MinWidth="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Icon="/A3sist;component/A3sist.ico">
    
    <Window.Resources>
        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,5,0,2"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Margin" Value="0,2,0,10"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E1E1E1"/>
        </Style>
        
        <Style x:Key="NumericTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource TextBoxStyle}">
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
        </Style>
        
        <Style x:Key="DialogButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#106EBE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource DialogButtonStyle}">
            <Setter Property="Background" Value="#F3F2F1"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E1E1E1"/>
        </Style>
        
        <Style x:Key="AddButtonStyle" TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
            <Setter Property="Background" Value="#107C10"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
        
        <Style x:Key="RemoveButtonStyle" TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
            <Setter Property="Background" Value="#D13438"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Configure MCP Server" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Configuration Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Basic Information -->
                <GroupBox Header="Basic Information" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <Label Content="Server Name:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Name="ServerNameTextBox" 
                                Style="{StaticResource TextBoxStyle}"
                                ToolTip="Enter a descriptive name for this MCP server"/>

                        <Label Content="Server Type:" Style="{StaticResource LabelStyle}"/>
                        <ComboBox Name="ServerTypeComboBox" 
                                 Margin="0,2,0,10"
                                 Padding="8,6"
                                 BorderThickness="1"
                                 BorderBrush="#E1E1E1"
                                 SelectionChanged="ServerTypeComboBox_SelectionChanged"/>

                        <Label Content="Description:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Name="DescriptionTextBox" 
                                Style="{StaticResource TextBoxStyle}"
                                AcceptsReturn="True"
                                Height="60"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto"
                                ToolTip="Optional description of this MCP server"/>
                    </StackPanel>
                </GroupBox>

                <!-- Connection Settings -->
                <GroupBox Header="Connection Settings" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <Label Content="Endpoint URL:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Name="EndpointTextBox" 
                                Style="{StaticResource TextBoxStyle}"
                                ToolTip="MCP server endpoint URL"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <Label Content="Port:" Style="{StaticResource LabelStyle}"/>
                                <TextBox Name="PortTextBox" 
                                        Style="{StaticResource NumericTextBoxStyle}"
                                        Text="8080"
                                        ToolTip="Server port number"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                <Label Content="Protocol:" Style="{StaticResource LabelStyle}"/>
                                <ComboBox Name="ProtocolComboBox" 
                                         Margin="0,2,0,10"
                                         Padding="8,6"
                                         BorderThickness="1"
                                         BorderBrush="#E1E1E1">
                                    <ComboBoxItem Content="HTTP" IsSelected="True"/>
                                    <ComboBoxItem Content="HTTPS"/>
                                    <ComboBoxItem Content="WebSocket"/>
                                    <ComboBoxItem Content="TCP"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>

                        <CheckBox Name="RequiresAuthCheckBox" 
                                 Content="Requires Authentication" 
                                 Margin="0,5,0,10"
                                 Checked="RequiresAuthCheckBox_Checked"
                                 Unchecked="RequiresAuthCheckBox_Unchecked"/>

                        <Grid Name="AuthenticationPanel" IsEnabled="False">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <Label Content="Username:" Style="{StaticResource LabelStyle}"/>
                                <TextBox Name="UsernameTextBox" 
                                        Style="{StaticResource TextBoxStyle}"
                                        ToolTip="Authentication username"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                <Label Content="Password:" Style="{StaticResource LabelStyle}"/>
                                <PasswordBox Name="PasswordBox" 
                                            Margin="0,2,0,10"
                                            Padding="8,6"
                                            BorderThickness="1"
                                            BorderBrush="#E1E1E1"
                                            ToolTip="Authentication password"/>
                            </StackPanel>
                        </Grid>

                        <Label Content="API Key:" Style="{StaticResource LabelStyle}"/>
                        <PasswordBox Name="ApiKeyPasswordBox" 
                                    Margin="0,2,0,10"
                                    Padding="8,6"
                                    BorderThickness="1"
                                    BorderBrush="#E1E1E1"
                                    ToolTip="API key for MCP server access (if required)"/>
                    </StackPanel>
                </GroupBox>

                <!-- Supported Tools -->
                <GroupBox Header="Supported Tools" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Label Grid.Column="0" Grid.Row="0" Content="Tool Name:" Style="{StaticResource LabelStyle}"/>
                            <TextBox Grid.Column="0" Grid.Row="1" 
                                    Name="NewToolNameTextBox" 
                                    Style="{StaticResource TextBoxStyle}"
                                    KeyDown="NewToolNameTextBox_KeyDown"
                                    ToolTip="Enter tool name and press Enter to add"/>

                            <Button Grid.Column="1" Grid.Row="1" 
                                   Content="Add" 
                                   Name="AddToolButton"
                                   Style="{StaticResource AddButtonStyle}"
                                   Click="AddToolButton_Click"/>

                            <Button Grid.Column="2" Grid.Row="1" 
                                   Content="Remove" 
                                   Name="RemoveToolButton"
                                   Style="{StaticResource RemoveButtonStyle}"
                                   Click="RemoveToolButton_Click"/>

                            <ListBox Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2" 
                                    Name="SupportedToolsListBox" 
                                    Height="120"
                                    Margin="0,10,0,0"
                                    BorderThickness="1"
                                    BorderBrush="#E1E1E1"/>
                        </Grid>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <Button Content="Auto-Discover Tools" 
                                   Name="AutoDiscoverButton"
                                   Style="{StaticResource SecondaryButtonStyle}"
                                   Click="AutoDiscoverButton_Click"/>
                            <Button Content="Load from Template" 
                                   Style="{StaticResource SecondaryButtonStyle}"
                                   Margin="10,0,0,0"
                                   Click="LoadTemplateButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- Advanced Settings -->
                <Expander Header="Advanced Settings" IsExpanded="False">
                    <StackPanel Margin="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <Label Content="Connection Timeout (seconds):" Style="{StaticResource LabelStyle}"/>
                                <TextBox Name="TimeoutTextBox" 
                                        Style="{StaticResource NumericTextBoxStyle}"
                                        Text="30"
                                        ToolTip="Connection timeout in seconds"/>

                                <Label Content="Retry Count:" Style="{StaticResource LabelStyle}"/>
                                <TextBox Name="RetryCountTextBox" 
                                        Style="{StaticResource NumericTextBoxStyle}"
                                        Text="3"
                                        ToolTip="Number of retry attempts on failure"/>

                                <CheckBox Name="EnableLoggingCheckBox" 
                                         Content="Enable Logging" 
                                         Margin="0,10,0,5"
                                         IsChecked="True"
                                         ToolTip="Log MCP server interactions"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                <Label Content="Max Concurrent Requests:" Style="{StaticResource LabelStyle}"/>
                                <TextBox Name="MaxConcurrentTextBox" 
                                        Style="{StaticResource NumericTextBoxStyle}"
                                        Text="10"
                                        ToolTip="Maximum concurrent requests to server"/>

                                <Label Content="Keep-Alive Interval (seconds):" Style="{StaticResource LabelStyle}"/>
                                <TextBox Name="KeepAliveTextBox" 
                                        Style="{StaticResource NumericTextBoxStyle}"
                                        Text="60"
                                        ToolTip="Keep-alive ping interval"/>

                                <CheckBox Name="AutoReconnectCheckBox" 
                                         Content="Auto-Reconnect" 
                                         Margin="0,10,0,5"
                                         IsChecked="True"
                                         ToolTip="Automatically reconnect on connection loss"/>
                            </StackPanel>
                        </Grid>

                        <Label Content="Custom Headers (JSON):" Style="{StaticResource LabelStyle}"/>
                        <TextBox Name="CustomHeadersTextBox" 
                                Style="{StaticResource TextBoxStyle}"
                                AcceptsReturn="True"
                                Height="80"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto"
                                ToolTip="Custom HTTP headers in JSON format"/>

                        <Label Content="Environment Variables:" Style="{StaticResource LabelStyle}"/>
                        <TextBox Name="EnvironmentVarsTextBox" 
                                Style="{StaticResource TextBoxStyle}"
                                AcceptsReturn="True"
                                Height="60"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto"
                                ToolTip="Environment variables (KEY=VALUE format, one per line)"/>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </ScrollViewer>

        <!-- Button Panel -->
        <Border Grid.Row="2" 
                BorderThickness="0,1,0,0" 
                BorderBrush="#E1E1E1" 
                Padding="0,15,0,0" 
                Margin="0,15,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Test Connection" 
                       Name="TestConnectionButton"
                       Style="{StaticResource SecondaryButtonStyle}"
                       Click="TestConnectionButton_Click"/>
                <Button Content="Cancel" 
                       IsCancel="True"
                       Style="{StaticResource SecondaryButtonStyle}"
                       Click="CancelButton_Click"/>
                <Button Content="OK" 
                       IsDefault="True"
                       Name="OkButton"
                       Style="{StaticResource DialogButtonStyle}"
                       Click="OkButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>