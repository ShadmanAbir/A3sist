<Window x:Class="A3sist.UI.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:A3sist.UI"
        Title="A3sist Chat Assistant" 
        Height="600" 
        Width="800"
        MinHeight="400"
        MinWidth="500"
        WindowStartupLocation="CenterScreen"
        Icon="/A3sist;component/A3sist.ico">
    
    <Window.Resources>
        <!-- Define styles -->
        <Style x:Key="ChatBubbleStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MaxWidth" Value="400"/>
        </Style>
        
        <Style x:Key="UserBubbleStyle" TargetType="Border" BasedOn="{StaticResource ChatBubbleStyle}">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
        
        <Style x:Key="AssistantBubbleStyle" TargetType="Border" BasedOn="{StaticResource ChatBubbleStyle}">
            <Setter Property="Background" Value="#F3F2F1"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#106EBE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with model selection -->
        <Border Grid.Row="0" Background="#F3F2F1" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                          Text="Active Model:" 
                          VerticalAlignment="Center" 
                          Margin="0,0,10,0"/>

                <ComboBox Grid.Column="1" 
                         Name="ModelComboBox" 
                         DisplayMemberPath="Name"
                         SelectedValuePath="Id"
                         MinWidth="200"
                         SelectionChanged="ModelComboBox_SelectionChanged"/>

                <Button Grid.Column="2" 
                       Content="Configure" 
                       Style="{StaticResource ModernButtonStyle}"
                       Margin="10,0,0,0"
                       Click="ConfigureButton_Click"/>

                <Button Grid.Column="3" 
                       Content="Clear Chat" 
                       Style="{StaticResource ModernButtonStyle}"
                       Margin="10,0,0,0"
                       Click="ClearChatButton_Click"/>
            </Grid>
        </Border>

        <!-- Chat messages area -->
        <ScrollViewer Grid.Row="1" 
                     Name="ChatScrollViewer"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Disabled"
                     Padding="10">
            <ItemsControl Name="ChatMessagesControl" 
                         ItemsSource="{Binding ChatMessages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Message bubble -->
                            <Border Grid.Row="0">
                                <Border.Style>
                                    <Style TargetType="Border" BasedOn="{StaticResource ChatBubbleStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Sender}" Value="User">
                                                <Setter Property="Background" Value="#0078D4"/>
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Sender}" Value="Assistant">
                                                <Setter Property="Background" Value="#F3F2F1"/>
                                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <TextBlock Text="{Binding Content}" 
                                          TextWrapping="Wrap"
                                          FontFamily="Segoe UI"
                                          FontSize="14">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Sender}" Value="User">
                                                    <Setter Property="Foreground" Value="White"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Sender}" Value="Assistant">
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Border>

                            <!-- Timestamp and model info -->
                            <StackPanel Grid.Row="1" 
                                       Orientation="Horizontal" 
                                       Margin="5,2">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Sender}" Value="User">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Sender}" Value="Assistant">
                                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>

                                <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm}'}" 
                                          FontSize="10" 
                                          Foreground="Gray" 
                                          Margin="0,0,5,0"/>

                                <TextBlock Text="{Binding ModelUsed}" 
                                          FontSize="10" 
                                          Foreground="Gray"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Status bar -->
        <Border Grid.Row="2" Background="#F8F8F8" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                          Name="StatusTextBlock" 
                          Text="Ready" 
                          FontSize="12" 
                          Foreground="Gray"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Ellipse Name="ModelStatusIndicator" 
                            Width="8" 
                            Height="8" 
                            Fill="Green" 
                            Margin="0,0,5,0"/>
                    <TextBlock Name="ModelStatusText" 
                              Text="Model Connected" 
                              FontSize="12" 
                              Foreground="Gray"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Input area -->
        <Border Grid.Row="3" Background="White" BorderBrush="#E1E1E1" BorderThickness="0,1,0,0" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Input text box -->
                <TextBox Grid.Column="0" 
                        Grid.Row="0"
                        Name="MessageTextBox" 
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        MaxHeight="120"
                        VerticalScrollBarVisibility="Auto"
                        BorderThickness="1"
                        BorderBrush="#E1E1E1"
                        Padding="8"
                        FontSize="14"
                        KeyDown="MessageTextBox_KeyDown"/>

                <!-- Send button -->
                <Button Grid.Column="1" 
                       Grid.Row="0"
                       Name="SendButton" 
                       Content="Send" 
                       Style="{StaticResource ModernButtonStyle}"
                       Margin="10,0,0,0"
                       VerticalAlignment="Top"
                       Click="SendButton_Click"/>

                <!-- Additional options -->
                <StackPanel Grid.Column="0" 
                           Grid.ColumnSpan="2"
                           Grid.Row="1" 
                           Orientation="Horizontal" 
                           Margin="0,5,0,0">
                    <CheckBox Name="UseRAGCheckBox" 
                             Content="Use RAG Context" 
                             IsChecked="True" 
                             Margin="0,0,15,0"/>
                    <CheckBox Name="ShowTimestampsCheckBox" 
                             Content="Show Timestamps" 
                             IsChecked="True" 
                             Margin="0,0,15,0"/>
                    <CheckBox Name="ShowModelUsedCheckBox" 
                             Content="Show Model Used" 
                             IsChecked="True"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>