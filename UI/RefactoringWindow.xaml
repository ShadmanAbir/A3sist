<Window x:Class="A3sist.UI.RefactoringWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="A3sist Refactoring Suggestions" 
        Height="600" 
        Width="900"
        MinHeight="500"
        MinWidth="700"
        WindowStartupLocation="CenterOwner"
        Icon="/A3sist;component/A3sist.ico">
    
    <Window.Resources>
        <Style x:Key="RefactorButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>
        
        <Style x:Key="DiffViewerStyle" TargetType="TextBox">
            <Setter Property="FontFamily" Value="Consolas, Courier New"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="TextWrapping" Value="NoWrap"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#F3F2F1" Padding="15">
            <StackPanel>
                <TextBlock Text="AI-Powered Code Refactoring" 
                          FontSize="18" 
                          FontWeight="Bold" 
                          Foreground="#0078D4"/>
                <TextBlock Text="Review and apply AI-suggested improvements to your code" 
                          FontSize="12" 
                          Foreground="Gray" 
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Suggestions List -->
        <GroupBox Grid.Row="1" Header="Refactoring Suggestions" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ListBox Grid.Column="0" 
                        Name="SuggestionsListBox" 
                        SelectionChanged="SuggestionsListBox_SelectionChanged"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Ellipse Grid.Row="0" Grid.Column="0" 
                                        Width="8" Height="8" 
                                        Margin="0,0,10,0"
                                        VerticalAlignment="Top">
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Fill" Value="Blue"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Priority}" Value="1">
                                                    <Setter Property="Fill" Value="Red"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Priority}" Value="2">
                                                    <Setter Property="Fill" Value="Orange"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Priority}" Value="3">
                                                    <Setter Property="Fill" Value="Green"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>

                                <TextBlock Grid.Row="0" Grid.Column="1" 
                                          Text="{Binding Title}" 
                                          FontWeight="SemiBold" 
                                          TextWrapping="Wrap"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="1" 
                                          Text="{Binding Description}" 
                                          FontSize="11" 
                                          Foreground="Gray" 
                                          TextWrapping="Wrap" 
                                          Margin="0,2,0,0"/>
                                
                                <StackPanel Grid.Row="2" Grid.Column="1" 
                                           Orientation="Horizontal" 
                                           Margin="0,5,0,0">
                                    <TextBlock Text="{Binding Type}" 
                                              FontSize="10" 
                                              Background="LightBlue" 
                                              Padding="3,1" 
                                              Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding Priority, StringFormat='Priority: {0}'}" 
                                              FontSize="10" 
                                              Foreground="Gray"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <Button Content="Preview" 
                           Name="PreviewButton"
                           Style="{StaticResource RefactorButtonStyle}" 
                           Click="PreviewButton_Click"
                           IsEnabled="False"/>
                    <Button Content="Apply" 
                           Name="ApplyButton"
                           Style="{StaticResource RefactorButtonStyle}" 
                           Click="ApplyButton_Click"
                           IsEnabled="False"/>
                    <Button Content="Apply All" 
                           Name="ApplyAllButton"
                           Style="{StaticResource RefactorButtonStyle}" 
                           Click="ApplyAllButton_Click"/>
                    <Separator Margin="5,10"/>
                    <Button Content="Refresh" 
                           Name="RefreshButton"
                           Style="{StaticResource RefactorButtonStyle}" 
                           Click="RefreshButton_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Preview Area -->
        <TabControl Grid.Row="2" Margin="10">
            <TabItem Header="Code Diff">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Original Code" FontWeight="Bold" Margin="5"/>
                        <TextBox Grid.Row="1" 
                                Name="OriginalCodeTextBox" 
                                Style="{StaticResource DiffViewerStyle}"
                                Background="#FFF8F8"/>
                    </Grid>
                    
                    <GridSplitter Grid.Column="1" 
                                 HorizontalAlignment="Stretch" 
                                 VerticalAlignment="Stretch"
                                 Background="Gray"/>
                    
                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Refactored Code" FontWeight="Bold" Margin="5"/>
                        <TextBox Grid.Row="1" 
                                Name="RefactoredCodeTextBox" 
                                Style="{StaticResource DiffViewerStyle}"
                                Background="#F8FFF8"/>
                    </Grid>
                </Grid>
            </TabItem>
            
            <TabItem Header="Change Summary">
                <ScrollViewer>
                    <StackPanel Name="ChangeSummaryPanel" Margin="10">
                        <TextBlock Text="No changes to preview" 
                                  FontStyle="Italic" 
                                  Foreground="Gray"
                                  Name="NoChangesTextBlock"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <TabItem Header="AI Analysis">
                <ScrollViewer>
                    <TextBlock Name="AIAnalysisTextBlock" 
                              Text="Select a refactoring suggestion to see AI analysis"
                              FontStyle="Italic" 
                              Foreground="Gray"
                              Margin="10"
                              TextWrapping="Wrap"/>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Status and Action Bar -->
        <Border Grid.Row="3" Background="#F8F8F8" BorderBrush="#E1E1E1" BorderThickness="0,1,0,0" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Name="StatusTextBlock" 
                              Text="Ready" 
                              VerticalAlignment="Center" 
                              Margin="0,0,15,0"/>
                    <CheckBox Name="AutoPreviewCheckBox" 
                             Content="Auto-preview on selection" 
                             IsChecked="True"
                             VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Undo Last" 
                           Name="UndoButton"
                           Style="{StaticResource RefactorButtonStyle}" 
                           Click="UndoButton_Click"
                           IsEnabled="False"/>
                    <Button Content="Export Diff" 
                           Name="ExportButton"
                           Style="{StaticResource RefactorButtonStyle}" 
                           Click="ExportButton_Click"/>
                    <Button Content="Close" 
                           IsCancel="True"
                           Style="{StaticResource RefactorButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>