<UserControl x:Class="A3sist.UI.A3sistToolWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" 
                BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" 
                BorderThickness="0,0,0,1" Padding="8,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="A3sist AI Assistant" 
                          FontWeight="Bold" 
                          Foreground="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}"
                          VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Ellipse x:Name="StatusIndicator" Width="8" Height="8" 
                            Fill="Gray" Margin="5,0"/>
                    <TextBlock x:Name="StatusText" Text="Ready" 
                              FontSize="10" Margin="5,0"
                              Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content Area -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                     HorizontalScrollBarVisibility="Disabled" Padding="8">
            <StackPanel>
                <!-- Quick Actions Section -->
                <GroupBox Header="Quick Actions" Margin="0,0,0,10">
                    <StackPanel>
                        <Button x:Name="OpenChatButton" Content="💬 Open Chat Assistant" 
                               HorizontalAlignment="Stretch" Margin="0,2" Padding="8,4"
                               Click="OpenChatButton_Click"/>
                        
                        <Button x:Name="RefactorCodeButton" Content="🔧 Refactor Selected Code" 
                               HorizontalAlignment="Stretch" Margin="0,2" Padding="8,4"
                               Click="RefactorCodeButton_Click"/>
                        
                        <Button x:Name="ConfigureButton" Content="⚙️ Configure A3sist" 
                               HorizontalAlignment="Stretch" Margin="0,2" Padding="8,4"
                               Click="ConfigureButton_Click"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Agent Mode Section -->
                <GroupBox Header="Agent Mode" Margin="0,0,0,10">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" x:Name="AgentStatusText" 
                                      Text="Not running" VerticalAlignment="Center"
                                      Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                            
                            <Button Grid.Column="1" x:Name="ToggleAgentButton" Content="Start" 
                                   Padding="12,2" Click="ToggleAgentButton_Click"/>
                        </Grid>
                        
                        <ProgressBar x:Name="AgentProgressBar" Height="4" Margin="0,5,0,0"
                                    Visibility="Collapsed"/>
                        
                        <TextBlock x:Name="AgentProgressText" FontSize="10" Margin="0,2,0,0"
                                  Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                                  Visibility="Collapsed"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Active Model Section -->
                <GroupBox Header="Active Model" Margin="0,0,0,10">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" x:Name="ActiveModelText" 
                                      Text="No model selected" VerticalAlignment="Center"
                                      TextWrapping="Wrap"/>
                            
                            <Ellipse Grid.Column="1" x:Name="ModelStatusIndicator" 
                                    Width="10" Height="10" Fill="Gray" Margin="5,0"/>
                        </Grid>
                        
                        <ComboBox x:Name="ModelComboBox" Margin="0,5,0,0"
                                 SelectionChanged="ModelComboBox_SelectionChanged"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Features Section -->
                <GroupBox Header="Features" Margin="0,0,0,10">
                    <StackPanel>
                        <CheckBox x:Name="AutoCompleteCheckBox" Content="AI AutoComplete" 
                                 Margin="0,2" Checked="AutoCompleteCheckBox_Checked"
                                 Unchecked="AutoCompleteCheckBox_Unchecked"/>
                        
                        <CheckBox x:Name="RealTimeAnalysisCheckBox" Content="Real-time Analysis" 
                                 Margin="0,2" IsChecked="True"/>
                        
                        <CheckBox x:Name="RAGEnabledCheckBox" Content="Knowledge Base (RAG)" 
                                 Margin="0,2" IsChecked="True"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" 
                BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" 
                BorderThickness="0,1,0,0" Padding="8,4">
            <TextBlock x:Name="FooterText" Text="A3sist v1.0" 
                      FontSize="10" HorizontalAlignment="Center"
                      Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
        </Border>
    </Grid>
</UserControl>